<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="20px">

        <Button
            android:id="@+id/goodsInfo_back_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/goodsInfo"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/goodsInfo_share_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/share_selector" />
    </LinearLayout>


    <ScrollView
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300px">

                <android.support.v4.view.ViewPager
                    android:id="@+id/goodsInfo_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="300px" />

                <LinearLayout
                    android:id="@+id/goodsInfo_point_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5px"
                    android:orientation="horizontal"></LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10px">

                <TextView
                    android:id="@+id/goodsInfo_goodsName"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:padding="20px"
                    android:text="sdjcje"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="4px"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:text="|"
                    android:textSize="32px"
                    android:textColor="@color/black"
                    android:padding="20px"
                    />

                <CheckBox
                    android:id="@+id/goodsInfo_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="40px"
                    android:padding="20px"
                    android:layout_marginTop="20px"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goodsInfo_goodsShopPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20px"
                    android:text="￥99.90"
                    android:textColor="@color/pink"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/goodsInfo_goodsMarketPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20px"
                    android:text="￥99.90"
                    android:textSize="38px" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/transport_price" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/free"
                    android:textColor="@color/pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/salesNum" />

                <TextView
                    android:id="@+id/goodsInfo_sales_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ss"
                    android:textColor="@color/pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/collection" />

                <TextView
                    android:id="@+id/goodsInfo_collect_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="qqq"
                    android:textColor="@color/pink" />

            </LinearLayout>

            <TextView
                android:id="@+id/goodsInfo_manyGifts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@color/white"
                android:drawableRight="@mipmap/next_icon"
                android:padding="20px"
                android:text="aaa" />

            <TextView
                android:id="@+id/goodsInfo_shouldKnow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableRight="@mipmap/next_icon"
                android:padding="20px"
                android:text="aa" />

            <com.bwie.zhangtianchengyunifang.Utils.CustomListView
                android:background="@color/white"
                android:id="@+id/goodsInfo_lv"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.bwie.zhangtianchengyunifang.Utils.CustomListView>
            <com.bwie.zhangtianchengyunifang.Utils.CustomListView
                android:background="@color/white"
                android:id="@+id/goodsInfo_img_lv"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.bwie.zhangtianchengyunifang.Utils.CustomListView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goodsInfo_client_tell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/public_contact_service_icon"
            android:gravity="center"
            android:text="@string/client_tell"
            android:textSize="16sp" />

        <Button
            android:id="@+id/goodsInfo_into_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="center"
            android:text="@string/into_car"
            android:layout_margin="10px"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/goodsInfo_buy_now"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/pink"
            android:gravity="center"
            android:layout_margin="10px"
            android:text="@string/buy_rightnow"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
